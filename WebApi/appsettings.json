{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "RentACar": "Server=(localdb)\\mssqllocaldb; Database=RentACar; Trusted_Connection=true"
  },
  "CacheSettings": {
    "SlidingExpiration": 2 //projenin yapısına göre değişir, burada varsayılanda 2 gün olarak belirttik
  },
  "SeriLogConfigurations": {
    "FileLogConfiguration": {
      "FolderPath": "/logs/"
    },
    "MsSqlConfiguration" : {
      "ConnectionString": "Server=(localdb)\\mssqllocaldb; Database=RentACar; Trusted_Connection=true",
      "TableName": "Logs",
      "AutoCreateSqlTable": true
    }
  },
  "AllowedHosts": "*"
}
